  <div class="bg-white p-8 rounded-lg shadow-lg sm:w-2/3" data-controller="product">
    <h2 class="text-2xl font-bold mb-4">Christmas Bacon Pre-order</h2>
    
    <%= form_with(url: basket_path, method: :post, local: true) do |form| %>
      <%= form.hidden_field :price, data: { product_target: "priceField" } %>
      
      <div class="mb-6">
        <%= form.label :weight, "Weight", class: "block text-gray-700 font-bold mb-2" %>
        <p class="text-sm text-gray-600 mb-2">A typical pack of supermarket bacon is 250g</p>
        <div class="flex space-x-2">
          <% %w[250g 500g 1kg 2kg].each do |weight| %>
            <label class="inline-flex items-center">
              <%= form.radio_button :weight, weight, class: "hidden peer", data: { action: "change->product#updatePrice", product_target: "weightRadio" } %>
              <span class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 cursor-pointer select-none peer-checked:bg-slate-900 peer-checked:text-white transition-colors">
                <%= weight %>
              </span>
            </label>
          <% end %>
        </div>
      </div>
      
      <div class="mb-6">
        <%= form.label :cut, "Cut", class: "block text-gray-700 font-bold mb-2" %>
        <div class="flex space-x-2">
          <% [["back", "Back Bacon"], ["streaky", "Streaky Bacon"]].each do |value, label| %>
            <label class="inline-flex items-center">
              <%= form.radio_button :cut, value, class: "hidden peer" %>
              <span class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 cursor-pointer select-none peer-checked:bg-slate-900 peer-checked:text-white transition-colors">
                <%= label %>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="mb-6">
        <%= form.label :cure, "Cure", class: "block text-gray-700 font-bold mb-2" %>
        <div class="flex flex-wrap gap-2">
          <% [["jerk", "Jerk"], ["maple", "Maple"], ["sweet", "Sweet"], ["honey-mustard", "Honey & Mustard"], ["classic", "Classic Bacon"]].each do |value, label| %>
            <label class="inline-flex items-center">
              <%= form.radio_button :cure, value, class: "hidden peer" %>
              <span class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 cursor-pointer select-none peer-checked:bg-slate-900 peer-checked:text-white transition-colors">
                <%= label %>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="mb-6">
        <%= form.label :smoke, "Smoke", class: "block text-gray-700 font-bold mb-2" %>
        <p class="text-sm text-gray-600 mb-2"><strong>Oak:</strong> Classic, earthy bacon-style smoke <br> <strong>Beech:</strong> Rich, nutty, subtle <br> <strong>Apple:</strong> Mild, slightlyt sweet & mellow <br> <strong>Cherry:</strong> Mild, sweet. Gives the meat a beautiful pink colour <br></p>
        <div class="flex flex-wrap gap-2">
          <% [["oak", "Oak"], ["beech", "Beech"], ["apple", "Apple"], ["cherry", "Cherry"], ["unsmoked", "Unsmoked"]].each do |value, label| %>
            <label class="inline-flex items-center">
              <%= form.radio_button :smoke, value, class: "hidden peer" %>
              <span class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 cursor-pointer select-none peer-checked:bg-slate-900 peer-checked:text-white transition-colors">
                <%= label %>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <div class="mb-6">
        <%= form.label :sliced, "Slicing", class: "block text-gray-700 font-bold mb-2" %>
        <p class="text-sm text-gray-600 mb-2">Our bacon is sliced thickly.</p>
        <div class="flex space-x-2">
          <% [["Sliced", "Sliced"], ["Whole Slab", "Whole Slab"]].each do |value, label| %>
            <label class="inline-flex items-center">
              <%= form.radio_button :sliced, value, class: "hidden peer" %>
              <span class="px-4 py-2 rounded-lg bg-gray-200 hover:bg-gray-300 cursor-pointer select-none peer-checked:bg-slate-900 peer-checked:text-white transition-colors">
                <%= label %>
              </span>
            </label>
          <% end %>
        </div>
      </div>

      <h1 data-product-target="priceDisplay"></h1>

      <div class="mb-4 text-left">
        <%= form.submit "Add to basket", class: "w-full bg-blue-500 hover:bg-blue-600 text-yellow-50 font-bold py-2 px-4 mt-12 rounded" %>
      </div>
    <% end %>
    
  </div>
  <div class="sm:w-1/3 sm:ml-4">
    <div class="text-yellow-50 p-4 rounded-lg shadow-lg h-full">
      <h2 class="text-xl font-bold mb-4"><i class="fas fa-truck mr-2" style="color: #fefce8;"></i>Delivery Details</h2>
      <p class="text-sm  mb-3">Minimum order value Â£20</p>
      <p class="text-sm mb-3">All orders are hand delivered free the week of 9th or 16th December to our local area:</p>
      <ul class="list-disc list-inside text-sm mb-3">
        <li>Locks Heath</li>
        <li>Warsash</li>
        <li>Titchfield</li>
        <li>Park Gate</li>
        <li>Whiteley</li>
        <li>Fareham</li>
        <li>Stubbington</li>
      </ul>
      <p class="text-sm mb-3">We can also arrange collection from Warsash or Southsea.</p>
      <p class="text-sm mb-3">If you live outside these areas, or want to collect,please email to discuss options before placing an order <a href="mailto:hello@smallbatchbacon.com" class="text-blue-300 hover:text-blue-400">hello@smallbatchbacon.com</a></p>
    </div>
  </div>
</div>