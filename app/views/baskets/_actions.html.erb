<div id="basket_actions" class="mt-12 sm:w-2/5 mx-auto">
  <% if basket_total >= 20 %>
    <div class="flex flex-col sm:flex-row items-center justify-between mb-4">
      <p class="text-white text-center sm:text-left order-2 sm:order-1 w-full sm:w-auto">
        <%= link_to products_path do %>
          🥓 Wait, I want more bacon!
        <% end %>
      </p>
      <%= form_with url: checkouts_path, method: :post, class: 'w-full sm:w-auto order-1 sm:order-2 ' do |form| %>
        <%= form.submit "Proceed to Checkout", class: "w-full sm:w-auto bg-blue-500 hover:bg-blue-600 text-white font-bold mb-5 sm:mb-0 py-2 px-4 rounded", data: {turbo: false} %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center">
      <p class="text-4xl font-bold mb-2">🐷</p>
      <p class="text-white mb-2">Minimum order is <span class="font-bold text-yellow-500">£20</span></p>
      <%= link_to "Add some more bacon to continue", products_path, class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded inline-block mt-4" %>
    </div>
  <% end %>
</div>